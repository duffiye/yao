<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.y3tu.yao.upms.mapper.RoleMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        `name`,
        code,
        remark,
        created_at,
        updated_at,
        deleted_at,
        state
    </sql>


    <select id="selectRoleByUserId" resultType="com.y3tu.yao.feign.vo.RoleVO">
        SELECT
        sr.id,
        sr.`name`,
        sr.`code`,
        sr.remark,
        sr.created_at,
        sr.updated_at,
        sr.deleted_at,
        sr.state
        FROM
        sys_role sr
        LEFT JOIN
        sys_user_role sur ON sr.id = sur.role_id
        WHERE
        sur.user_id = #{userId}
    </select>

    <select id="page" resultType="com.y3tu.yao.upms.model.entity.Role">
        select
        <include refid="Base_Column_List"/>
        from t_role where 1=1
        <if test="params.name!=null and params.name!=''">
            and (name like '%${params.name}%' or role_code like '%${params.name}%')
        </if>
    </select>

    <select id="selectByPrimaryKey" resultType="com.y3tu.yao.feign.vo.RoleVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_role
        WHERE id = #{id}
    </select>

    <select id="selectByCondition" resultType="com.y3tu.yao.upms.model.vo.RoleQueryVO">
        SELECT
        id,
        `name` as roleName,
        `code`,
        remark,
        created_at
        FROM
        sys_role
        WHERE
        1=1
        <if test="roleName != null and roleName != ''">
            AND `name` like "%"#{roleName}"%"
        </if>
    </select>

    <select id="selectByName" resultType="com.y3tu.yao.upms.model.entity.Role">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_role
        WHERE
        `name` = #{name}
    </select>

    <select id="selectAllForUser" resultType="com.y3tu.yao.upms.model.vo.UserRoleVO">
        SELECT
        id,
        `name`,
        code
        FROM
        sys_role
    </select>
</mapper>
