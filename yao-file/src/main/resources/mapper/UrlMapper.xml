<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.y3tu.yao.file.mapper.UrlMapper">
    <update id="updateUrl">
        insert into ${tableName}(id,${columnName})VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.newUrl})
        </foreach>
        ON DUPLICATE KEY UPDATE
        id=VALUES(id),${columnName} = VALUES(${columnName})
    </update>

    <select id="selectUrl" resultType="com.y3tu.yao.file.entity.UpdateUrl">
      SELECT id, ${columnName} as url FROM ${tableName} ORDER BY id limit #{limit} , #{offset};
    </select>

    <select id="getMaxId" resultType="java.lang.Integer">
      SELECT max(id) FROM ${tableName};
    </select>

    <select id="getMinId" resultType="java.lang.Integer">
        SELECT min(id) FROM ${tableName};
    </select>

</mapper>