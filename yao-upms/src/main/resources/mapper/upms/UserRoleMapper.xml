<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.y3tu.yao.upms.mapper.UserRoleMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_at,
        updated_at,
        deleted_at,
        user_id,
        role_id
    </sql>

    <resultMap id="baseResultMap" type="com.y3tu.yao.upms.model.entity.UserRole">
        <id column="id" property="id"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="deleted_at" property="deletedAt"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <select id="page" resultType="com.y3tu.yao.upms.model.entity.UserRole">
        select
        <include refid="Base_Column_List"/>
        from t_user_role
    </select>


    <select id="findDepIdsByUserId" resultType="java.lang.String">
        SELECT DISTINCT rd.department_id
        FROM t_role_department rd
        WHERE role_id IN
              ( SELECT ur.role_id FROM t_user_role ur WHERE ur.user_id = #{userId} )
    </select>


    <insert id="insertRef" parameterType="com.y3tu.yao.upms.model.query.user.UserRoleAddQuery">
        INSERT INTO sys_user_role
        (user_id,role_id)
        VALUES
        (#{userID}, #{roleID})
    </insert>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_role WHERE user_id = #{uid}
    </delete>

    <select id="findByUserId" resultMap="baseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_user_role ur
        WHERE
        user_Id = #{uid}
    </select>

    <select id="findByRoleId" resultMap="baseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_user_role
        WHERE
        role_id = #{roleId}
    </select>
</mapper>
